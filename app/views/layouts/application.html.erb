  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="/">Gifsearch</a>

        <% unless current_page? root_path %>
            <%= form_tag('/search', class: 'navbar-search pull-right') do -%>
                <%=  text_field_tag 'query', nil, placeholder: 'Search for a GIF!', maxlength: 100, class: 'search-query' %>

            <% end -%>
        <% end %>

      </div>
    </div>
  </div>

  <div id="qunit"></div>

  <div class="container">
    <div class="row">
      <div class="span12">

        <% if flash[:notice] %>
            <br />
            <div class="alert alert-notice"><%= flash[:notice] %></div>
        <% end %>


        <%= yield %>



